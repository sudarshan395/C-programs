#include<stdio.h>
void main()
{
int i,x,y,count=0;
printf("enter the number");
scanf("%d",&i);
 x = i << 1;
        y = x ^ i;
        y = y + 1;


        while ((y / 2) != 0)
        {
            if (y % 2 != 0)
            {
                count++;
                break;
            }
            else
            {
                y = y / 2;
            }
        }
        if (count)
        {
            printf("false");
        }
        else
        {
            printf("true");
        }
    }

}
